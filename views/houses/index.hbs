<h1>Review A House</h1>
  {{#each houses}}
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">{{address}}</h5>
        <a href="/neighborhoods/{{_id}}/houses/{{_id}}" class="btn btn-warning">See this House</a>
    </div>
</div>
{{/each}}

<a href="/neighborhoods/{{neighborhoods.id}}/houses/new"><button type="button" class="btn btn-warning">Create A New House</button></a>

<form action="/neighborhoods/{{neighborhoods.id}}?_method=DELETE" method="POST"><button class='btn btn-warning fixed bottom' type="submit">
        Delete this Neighborhood</button></form>