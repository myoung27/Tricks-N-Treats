<div id='edit-form' class="user container-show">
  <form action="/neighborhoods/{{neighborhoods.id}}/houses?_method=PATCH" method="GET" class="auth-form">
    <div class="form-group">
      <label for="address">House Address</label>
      <input type="text" name="address" class="form-control" id="address" placeholder="{{address}}">

    </div>
    <div class="form-group">
      <label for="candy">Does this house give out candy?</label>
      <input type="text" name="candy" class="form-control" id="candy" placeholder="{{candy}}">
    </div>
    <div class="form-group">
      <label for="streelight">Is there a streetlight?</label>
      <input type="text" name="streetlight" class="form-control" id="streetlight" placeholder="{{streetlight}}">
    </div>
    <button type="submit" class="btn btn-primary"> Edit this House</button>
  </form>
</div>