<div id='edit-form' class="user container-show">
    <form action="/neighborhoods/{{neighborhoods.id}}/houses" method="POST" class="auth-form">
        <div class="form-group">
            <label for="address">House Address</label>
            <input type="text" name="address" class="form-control" id="address" placeholder="Enter Address">

        </div>
        <div class="form-group">
            <label for="candy">Does this house give out candy?</label>
            <input type="text" name="candy" class="form-control" id="candy" placeholder="Does this house give out candy?">
        </div>
        <div class="form-group">
            <label for="streelight">Is there a streetlight?</label>
            <input type="streetlight" name="streetlight" class="form-control" id="streetlight" placeholder="Is there a streetlight?">
        </div>
        <button type="submit" class="btn btn-warning">Create
            this House</button>
    </form>
</div>